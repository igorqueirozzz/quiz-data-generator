<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/question_row_layout">

    <TextView
        android:id="@+id/lb_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/description_doted"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_question_description"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/lb_description"
        android:textSize="16sp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        tools:text="@tools:sample/lorem/random" />

    <TextView
        android:id="@+id/lb_number_of_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lb_description"
        android:layout_marginStart="16dp"
        android:text="@string/number_of_answers_doted"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_number_of_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lb_description"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@id/lb_number_of_answers"
        android:textSize="16sp"
        tools:text="4" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/tv_number_of_answers"
        android:layout_margin="6dp"
        android:background="@android:color/darker_gray" />


</RelativeLayout>